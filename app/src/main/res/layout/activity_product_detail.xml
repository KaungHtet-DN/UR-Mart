<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProductDetailActivity"
    android:orientation="vertical"
    android:background="@drawable/background">

    <ImageView
        android:layout_width="400dp"
        android:layout_height="350dp"
        android:id="@+id/detailImage"
        android:padding="8dp"
        android:layout_marginTop="40dp"
        android:layout_gravity="center"
        android:src="@drawable/uploadimg"
        android:scaleType="fitXY"/>

    <androidx.cardview.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="12dp"
    android:layout_marginEnd="12dp"
    android:layout_marginHorizontal="10dp"
    android:layout_marginVertical="10dp"
    app:cardCornerRadius="20dp"
    app:cardElevation="8dp"
    >

        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/detailProductName"
        android:text="Product Name"
        android:layout_marginTop="10dp"
        android:textSize="25sp"
        android:layout_gravity="center"
        android:textColor="@color/lavender"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/detailProductId"
            android:visibility="gone"
        />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingBottom="10dp"
            android:text="Description"
            android:layout_gravity="center"
            android:id="@+id/detailDesc"
            android:textSize="18sp"
            android:textColor="@color/black"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="start"
            android:paddingLeft="10dp"
            android:paddingBottom="10dp"
        >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:textColor="@color/black"
                android:text="Price"
                android:paddingRight="61dp"
            />

            <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:layout_marginLeft="170dp"
            android:paddingRight="5dp"
            android:text="CAD"
            />

            <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="0.00"
            android:id="@+id/detailPrice"
            android:textAlignment="textEnd"
            android:paddingRight="10dp"
            android:textSize="18sp"
            android:textColor="@color/black"/>
        </LinearLayout>

        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="start"
        android:paddingLeft="10dp"
        android:paddingBottom="10dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:paddingTop="5dp"
            android:text="Quantity"
            />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="215dp"
            >

            <ImageButton
                android:id="@+id/decrementButton"
                android:layout_width="30dp"
                android:layout_height="35dp"
                android:src="@drawable/baseline_arrow_left_24"
                android:backgroundTint="@color/lavender"
                app:tint="@color/white"
                />

            <TextView
                android:id="@+id/qunatityText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textSize="18sp"
                android:gravity="bottom"
                android:layout_marginHorizontal="5dp"
                android:layout_marginVertical="5dp"
                />

            <ImageButton
                android:id="@+id/incrementButton"
                android:layout_width="30dp"
                android:layout_height="35dp"
                android:src="@drawable/baseline_arrow_right_24"
                android:backgroundTint="@color/lavender"
                app:tint="@color/white"/>
        </LinearLayout>
        </LinearLayout>

        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="start"
        android:paddingLeft="10dp"
        android:paddingBottom="10dp"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:text="Total Amount"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:layout_marginLeft="170dp"
            android:paddingRight="5dp"
            android:text="CAD"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="0.00"
            android:id="@+id/detailTotalAmount"
            android:textAlignment="textEnd"
            android:paddingRight="10dp"
            android:textSize="18sp"
            android:textColor="@color/black"/>
    </LinearLayout>

    </LinearLayout>
    </androidx.cardview.widget.CardView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="40dp"
        >

        <Button
            android:id="@+id/detailBacktoshop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Back to Shop"
            android:layout_marginRight="10dp"/>

        <Button
            android:id="@+id/detailAddToCartButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add To Cart"
            android:layout_marginRight="10dp"/>

        <Button
            android:id="@+id/detailCheckoutButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Check Out" />
    </LinearLayout>

</LinearLayout>